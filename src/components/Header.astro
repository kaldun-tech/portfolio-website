---
interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'Portfolio', href: '/portfolio' },
];

const currentPath = new URL(Astro.request.url).pathname;
---

<header class="sticky top-0 z-40 border-b border-gray-200 bg-white/80 backdrop-blur-sm">
  <nav class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
    <a href="/" class="text-lg font-semibold text-gray-900 hover:text-gray-700 transition-colors">
      Taras Smereka
    </a>

    <div class="flex items-center gap-8">
      <div class="hidden sm:flex gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-sm font-medium transition-colors ${
              currentPath === link.href
                ? 'text-gray-900'
                : 'text-gray-600 hover:text-gray-900'
            }`}
          >
            {link.label}
          </a>
        ))}
      </div>

      <a
        href="https://calendly.com/kaldun/meeting"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-brand-blue rounded-lg hover:bg-brand-blue-dark transition-colors"
      >
        Schedule a Call
      </a>
    </div>
  </nav>
</header>
