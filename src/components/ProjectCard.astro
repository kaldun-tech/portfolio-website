---
interface Props {
  title: string;
  description: string;
  technologies: string[];
  links?: {
    label: string;
    href: string;
  }[];
  featured?: boolean;
}

const { title, description, technologies, links = [], featured = false } = Astro.props;
---

<div
  class={`rounded-lg border transition-all ${
    featured
      ? 'border-gray-300 bg-gray-50 p-6 md:p-8'
      : 'border-gray-200 bg-white p-6 hover:border-gray-300'
  }`}
>
  <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-3">{title}</h3>

  <p class="text-gray-700 text-sm md:text-base mb-4 leading-relaxed">
    {description}
  </p>

  {technologies.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="inline-block px-3 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded">
          {tech}
        </span>
      ))}
    </div>
  )}

  {links.length > 0 && (
    <div class="flex flex-wrap gap-3 pt-4 border-t border-gray-200">
      {links.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors underline"
        >
          {link.label} â†’
        </a>
      ))}
    </div>
  )}
</div>
